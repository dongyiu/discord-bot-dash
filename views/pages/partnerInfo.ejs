<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <link rel="stylesheet" href="./css/commands.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
        <script src="https://cdn.tailwindcss.com/"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>     
        <script defer src="https://unpkg.com/alpinejs@3.9.1/dist/cdn.min.js"></script>
           
</head>

<body data-theme="light" x-data="partners">
    <header>
        <%- include('../partials/header'); %>
    </header>

    <main class="min-h-screen w-full lg:p-10 p-1">

        <!-- component -->
        <div class="flex flex-row flex-wrap p-3">
            <div class="mx-auto lg:w-2/5 w-full ">
                <!-- Profile Card -->
                <div class="rounded-lg shadow-lg bg-gray-600 w-full flex flex-row flex-wrap p-3 antialiased" style="
                    /* background-image: url('https://images.unsplash.com/photo-1578836537282-3171d77f8632?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80'); */
                    background-repeat: no-repat;
                    background-size: cover;
                    background-blend-mode: multiply;
                ">
                    <div class="md:w-1/3 w-full">
                    <img class="rounded-full hover:animate-spin duration-900 shadow-lg antialiased" src="https://cdn.discordapp.com/icons/719180744311701505/a_d065535aef7d560b0d89f4abb266d92b.webp">  
                    </div>
                    <div class="md:w-2/3 w-full px-3 flex flex-row flex-wrap">
                    <div class="w-full text-right text-gray-700 font-semibold relative pt-3 md:pt-0">
                        <div class="text-2xl text-white leading-tight">Dank Trades</div>
                        <div class="text-normal text-gray-300 hover:text-gray-400 cursor-pointer"><span class="border-b border-dashed border-gray-500 pb-1">
                            <i class="fa fa-circle text-xs text-green-300"></i>
                            3000 members</span></div>
                        
                        <div class="text-sm cursor-pointer md:absolute pt-3 md:pt-0 bottom-0 right-0">
                            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                <label @click="selectType('Normal')" class="btn btn-primary active">
                                  <input  type="radio" name="options" id="option1" autocomplete="off" checked> Normal
                                </label>
                                <label @click="selectType('Events')" class="btn btn-primary">
                                  <input type="radio" name="options" id="option2" autocomplete="off"> Events
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            <!-- End Profile Card -->
            </div>
        </div>

        <div class="flex flex-row flex-wrap p-3">
            <div class="mx-auto lg:w-2/5 w-full">
                <div class="bg-gray-600 p-3 rounded-lg" x-data="{ normal: {pings: null, cooldowns: null, channel: null} , events: {}}">
                    <p class="text-2xl p-3">
                        <span x-text="option"></span>
                        <span>Heist Partners</span>
                    </p>
                    <hr>
                    <br>
                    <div class="p-3 text-base">
                        <p>Select your server that you wish to partner with <b>Dank Trades</b>.</p>
                        <div class="input-group input-group-sm py-2 w-full">
                            <select x-model="normal.channel" class="selectpicker bg-gray-200 w-full" data-live-search="true">
                                <option>Mustard</option>
                                <option>Ketchup</option>
                                <option>Relish</option>
                            </select>
                        </div>
                    </div>
                    

                    <div x-show="option=='Normal'" class="p-3 text-base">
                        <p>Pings</p>
                        <div class="input-group input-group-sm py-2 w-full">
                            <select x-model="normal.pings" class="selectpicker bg-gray-200 w-full" multiple data-live-search="true">
                                <option>Mustard</option>
                                <option>Ketchup</option>
                                <option>Relish</option>
                            </select>
                        </div>
                        <br>
                        <p>Cooldowns</p>
                        <div class="py-3 w-full text-black">
                            <input x-model="normal.cooldowns" type="number" class="p-2 bg-gray-200 w-1/3">
                        </div>
                        <br>
                        <p>Channel</p>
                        <div class="input-group input-group-sm py-2 w-full">
                            <select x-model="normal.channel" class="selectpicker bg-gray-200 w-full" data-live-search="true">
                                <option>Mustard</option>
                                <option>Ketchup</option>
                                <option>Relish</option>
                            </select>
                        </div>
                    </div>
                    
                    <div x-show="option=='Events'" class="p-3 text-base">
                        <p>Event Name</p>
                        <div class="input-group input-group-sm py-2 w-full">
                            <select x-model="normal.channel" class="selectpicker bg-gray-200 w-full" data-live-search="true">
                                <option>Mustard</option>
                                <option>Ketchup</option>
                                <option>Relish</option>
                            </select>
                        </div>
                        <br>
                        <p>Deal Expire in</p>
                        <div class="py-3 w-full text-black">
                            <input type="text" class="p-2 bg-gray-200 w-2/3" placeholder="eg: 2 months">
                        </div>
                        <br>

                        <hr>
                        
                        <div x-data="{createChannel : null}">
                            <p class="text-2xl py-3">Dank Trades will be doing ...</p>
                        
                            <p>Pings</p>
                            <div class="input-group input-group-sm py-2 w-full">
                                <select class="selectpicker bg-gray-200 w-full" multiple data-live-search="true">
                                    <option>Mustard</option>
                                    <option>Ketchup</option>
                                    <option>Relish</option>
                                </select>
                            </div>
                            <br>
    
                            <div class="mb-3">
                                <p>Create Channel</p>
                                <div class="custom-control custom-radio custom-control-inline m-1">
                                    <input @click="createChannel = true" type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadioInline1">Yes</label>
                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input @click="createChannel = false" type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadioInline2">No</label>
                                </div>
                            </div>

                            <div x-show="createChannel == false">
                                <p>Channel</p>
                                <div class="input-group input-group-sm py-2 w-full mb-3">
                                    <select class="selectpicker bg-gray-200 w-full" data-live-search="true">
                                        <option>Mustard</option>
                                        <option>Ketchup</option>
                                        <option>Relish</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mt-2 mb-3" x-show="createChannel == true">
                                <p>Channel Name</p>
                                <div class="py-3 w-full text-black">
                                    <input type="text" maxlength="35" class="p-2 bg-gray-200 w-2/3" placeholder="input channel name">
                                </div>
                                <p>Category Name</p>
                                <div class="input-group input-group-sm py-2 w-full">
                                    <select class="selectpicker bg-gray-200 w-full" data-live-search="true">
                                        <option>Mustard</option>
                                        <option>Ketchup</option>
                                        <option>Relish</option>
                                    </select>
                                </div>
                            </div>
                            
                        </div>

                        <hr>
                        
                        <div x-data="{createChannel : null}">
                            <p class="text-2xl py-3">Def will be doing ...</p>
                        
                            <p>Pings</p>
                            <div class="input-group input-group-sm py-2 w-full">
                                <select class="selectpicker bg-gray-200 w-full" multiple data-live-search="true">
                                    <option>Mustard</option>
                                    <option>Ketchup</option>
                                    <option>Relish</option>
                                </select>
                            </div>
                            <br>
    
                            <div class="mb-3">
                                <p>Create Channel</p>
                                <div class="custom-control custom-radio custom-control-inline m-1">
                                    <input @click="createChannel = true" type="radio" id="customRadioInline3" name="customRadioInline3" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadioInline3">Yes</label>
                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input @click="createChannel = false" type="radio" id="customRadioInline4" name="customRadioInline3" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadioInline4">No</label>
                                </div>
                            </div>
    
                            <div x-show="createChannel == false">
                                <p>Channel</p>
                                <div class="input-group input-group-sm py-2 w-full mb-3">
                                    <select class="selectpicker bg-gray-200 w-full" data-live-search="true">
                                        <option>Mustard</option>
                                        <option>Ketchup</option>
                                        <option>Relish</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mt-2 mb-3" x-show="createChannel == true">
                                <p>Channel Name</p>
                                <div class="py-3 w-full text-black">
                                    <input type="text" maxlength="35" class="p-2 bg-gray-200 w-2/3" placeholder="input channel name">
                                </div>
                                <p>Category Name</p>
                                <div class="input-group input-group-sm py-2 w-full">
                                    <select class="selectpicker bg-gray-200 w-full" data-live-search="true">
                                        <option>Mustard</option>
                                        <option>Ketchup</option>
                                        <option>Relish</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        

                        
                    </div>
                    <div class="flex flex-row-reverse p-3">
                        <div class="flex-initial pl-3">
                           <button @click="saveData(option=='Normal' ? normal : events)" type="button" class="flex items-center px-5 py-2.5 font-medium tracking-wide text-white capitalize   bg-black rounded-md hover:bg-gray-800  focus:outline-none focus:bg-gray-900  transition duration-300 transform active:scale-95 ease-in-out">
                              <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#FFFFFF">
                                 <path d="M0 0h24v24H0V0z" fill="none"></path>
                                 <path d="M5 5v14h14V7.83L16.17 5H5zm7 13c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-8H6V6h9v4z" opacity=".3"></path>
                                 <path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm2 16H5V5h11.17L19 7.83V19zm-7-7c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3zM6 6h9v4H6z"></path>
                              </svg>
                              <span class="pl-2 mx-1">Save</span>
                           </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>
    <%- include('../partials/footer'); %>
</body>
</html>

<script defer>
    function partners() {
        return {
            option: 'Normal',
            selectType(option) {
                return this.option = option;
            },
            saveData(data) {
                console.log(data)
            }
        }
    }
</script>