<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <link rel="stylesheet" href="./css/commands.css">
</head>


<body data-theme="light">
    <header>
        <%- include('../partials/header'); %>
    </header>


    <main class="container command-container">
        <div class="d-flex justify-content-center command_head slide-up-fade-in">
            <!-- HEADING -->
            <h1> BOT COMMANDS </h1>
        </div>

        <div class="container px-lg-5 slide-up-fade-in" id="commands_menu">
            <div class="row">
                <div class="col-sm-3" id="category">
                    <div class="list-group" id="myList" role="tablist">
                        <!-- CATEGORY -->
                        <% let category=[...new Set(commands.map(x=> x.category))] %>
                            <% for(let i=0;i < category.length;i++) { %>

                                <a class="list-group-item list-group-item-action <%= (i === 0 ? 'active' : '') %>" data-toggle="list" href=<%="#" + category[i] %> role="tab"
                  ><%= category[i].toUpperCase() %></a>
                                <% } %>
                    </div>
                </div>

                <div class="col-sm-9">
                    <div class="tab-content">
                        <% for(let i=0;i < category.length;i++) { %>
                            <div class="tab-pane fade show <%= (i === 0 ? 'active' : '') %>" id="<%= category[i] %>" role="tabpanel">
                                <div class="accordion-wrapper">
                                    <!-- COMMANDS -->
                                    <% let cmds=commands.filter(x=> x.category === category[i]) %>
                                        <% for(let cmd of cmds) { %>
                                            <div class="accordion">
                                                <input class="cmd" type="radio" name="radio-a" id="<%= cmd.name %>">
                                                <label class="accordion-label" for="<%= cmd.name %>">
                          <%= cmd.name %>
                        </label>
                                                <div class="accordion-content">
                                                    <p>
                                                        <i class="fas fa-info-circle"></i>
                                                        <%= cmd.description %>
                                                            <br>
                                                            <i class="fas fa-question-circle"></i> <kbd>
                                <%= cmd.usage %>
                              </kbd>
                                                    </p>
                                                </div>
                                            </div>
                                            <% } %>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer'); %>
</body>


<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</html>