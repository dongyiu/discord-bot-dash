<% 
   const guild= bot.guilds.cache.find(x=> x.id === guild_id)
   const roles = guild.roles.cache.filter(a => a.rawPosition != 0)
   const channels = guild.channels.cache.filter(a => a.type == 'GUILD_TEXT') 
   const selectedRoles = donoconfig._doc.manager_roles.filter(a => roles.find(b => b.id == a)) || []
   const selectedChannel = donoconfig._doc.logChannel
%>

<!-- Modal -->
<div class="modal fade text-black" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Auto Roles</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
             <div class="">
                <h1 class=" inline text-xl font-semibold leading-none">Role </h1><br>
               <div class="py-3">
                <select id="autoRole" class="selectpicker" data-live-search="true">
                    <% roles.toJSON().map((a,x) => {
                       if(selectedRoles.includes(a.id)) {%>
                          <option selected="selected" value="<%= a.id %>">@<%= a.name %></option>
                       <%} else {%>
                          <option value="<%= a.id %>">@<%= a.name %></option>
                       <%}%>
                    <%})%>
                  </select>
               </div>
             </div>

             <div class="">
                <h1 class=" inline text-xl font-semibold leading-none">Amount </h1><br>
               <div class="py-3">
                   <input id="autoRoleAmount" type="number" class="w-1/2 rounded-lg rounded-md bg-gray-100">
               </div>
             </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" onclick="addRole()">Add</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
  <script>
      const notyf = new Notyf();
    
  </script>
